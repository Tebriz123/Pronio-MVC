@model List<Category>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slides</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <a class="btn btn-success" asp-action="Create">Create Category</a>
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Product Count
                                </th>
                               
                                
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td class="py-1">
                                        @count
                                    </td>
                                   
                                    
                                    <td>
                                        <a class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>