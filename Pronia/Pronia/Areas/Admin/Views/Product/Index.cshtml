
@model List<GetAdminProduct>
@{
    int count=0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
              
                <div class="table-responsive">
                    <table class="table table-striped">
                        <a class="btn btn-success" asp-action="Create">Create Product</a>
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                         @foreach (GetAdminProduct productVM in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                       <img src="~/assets/images/website-images/@productVM.Image"/>
                                    </td>
                                    <td>
                                      @productVM.Name
                                    </td>
                                    <td>
                                       @productVM.Price
                                    </td>
                                    <td>
                                        @productVM.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@productVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="Update" asp-route-id="@productVM.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>